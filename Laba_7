#include <cmath>
using namespace std;
int main()
{ setlocale(LC_ALL, "");
 cout << "Введите величину угла в радианах";
 double P = 3.14 , X ;
 cin >> X;
 cout << "X1 = " << X / (P / 180);

 return 0;
}



