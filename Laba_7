#include <iostream>
#include <cmath>
using namespace std;
int main()
{	setlocale(LC_ALL, "");
	cout << "Введите массу конфет , цену за эту массу и массу во втором случае";
    double  A, Y, X ;
    cin >> X >> A >> Y;
    cout << ( A / X ) * (Y + 1);

    return 0;
}


4

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	setlocale(LC_ALL, "");
	cout << "Введите 2 скорости , изначальное расстояние и время движения";
    int V1, V2, S , T ;
    cin >> V2 >>  V1 >> S >> T ;
    cout << abs(V2 - V1) * T + S << " or " << (V2 + V1) * T + S;
    return 0;
}


