#include <iostream>
#include <cmath>
using namespace std;
int main()
{	setlocale(LC_ALL, "");
	cout << "Введите коэфиценты А и В";
    double A, B ;
    cin >> A >> B ;
    cout << (-B / A) ;
    return 0;
}



6

#include <iostream>
#include <cmath>
using namespace std;
int main()
{	setlocale(LC_ALL, "");
	cout << "Введите коэфиценты системы уравнений ";
    int A1, B1, C1, A2, B2, C2;
    cin >> A1 >> B1 >> C1 >> A2 >> B2 >> C2;
    if ((A1 * B2) - (A2 * B1) != 0) {
        cout << "X1 = " << ((C1 * B2) - (C2 * B1)) / ((A1 * B2) - (A2 * B1)) << endl << "X2 = " << (A1 * C2 - A2 * C1 ) / (A1 * B2) - (A2 * B1);
    }

    return 0;
}
