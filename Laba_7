#include <iostream>
#include <cmath>
using namespace std;
int main()
{ setlocale(LC_ALL, "");
 cout << "Введите величину угла в грудусах";
 double P = 3.14 , X ;
 cin >> X;
 cout << "X1 = " << X / (180 / P);

 return 0;
}
