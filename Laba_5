#include <iostream>
#include <cmath>
using namespace std;


int main() {
	setlocale(LC_ALL, "");
	cout << "Введите координаты точек ";*/
	double  x1, y1, x2, y2, x3, y3,a , b, c  ;
	cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3 ;
	a = sqrt((pow((x2 - x1), 2) + (pow((y2 - y1), 2))));
	b = sqrt((pow((x3 - x2), 2) + (pow((y3 - y2), 2))));
	c = sqrt((pow((x3 - x1), 2) + (pow((y3 - y1), 2))));
	cout << "AB = " << sqrt((pow((x2 - x1), 2) + (pow((y2 - y1), 2)))) << endl;
	cout << "BC = " << sqrt((pow((x3 - x2), 2) + (pow((y3 - y2), 2)))) << endl ;
	cout << "AC = " << sqrt((pow((x3 - x1), 2) + (pow((y3 - y1), 2)))) << endl ;
	cout << "S = " << sqrt((((a + b + c) / 2) * ((a + b + c) / 2 - a) * ((a + b + c) / 2 - b) * ((a + b + c) / 2 - c))) << endl;
	cout << "P = " << a + b + c;
	return 0;
}
