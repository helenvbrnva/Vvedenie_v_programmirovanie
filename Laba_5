1
#include <iostream>
#include <cmath>
using namespace std;


int main() {
	setlocale(LC_ALL, "");
	cout << "Введите координаты";
	double x1, y1, x2, y2;
	cin >> x1 >> y1 >> x2 >> y2;
	cout << sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
	return 0;
}
2
#include <iostream>
#include <cmath>
using namespace std;


int main() {
	double A, B, C;
	cin >> A >> B >> C;
	cout << "AC = " << abs(C - A) << endl << "BC = " << abs(C - B);
	return 0;
}
3
#include <iostream>
#include <cmath>
using namespace std;


int main() {
	double A, B, C;
	cin >> A >> B >> C;
	cout << "CB - CA or CA - CB = " << abs(C - A) * abs(C - B);
	return 0;
}
4
#include <iostream>
#include <cmath>
using namespace std;


int main() {
	setlocale(LC_ALL, "");
	cout << "Введите два числа ";
	double x1, y1, x2, y2;
	cin >> x1 >> y1 >> x2 >> y2;
	cout << "S = " << abs ((x2 - x1) * (y2 - y1 ))<<endl
		<< "P = " << abs(2 * (x2 - x1)) + abs(2 * (y2 - y1 ));
	return 0;
}
