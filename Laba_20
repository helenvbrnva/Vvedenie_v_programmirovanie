#include <iostream>
#include <cmath>

using namespace std;

int main() {
	setlocale(LC_ALL, "");
	cout << "Введите число : ";
	double a;
	cin >> a;
	cout << "0.1 = " << 0.1 * a << endl
		<< "0.2 = " << 0.2 * a << endl
		<< "0.3 = " << 0.3 * a << endl
		<< "0.4 = " << 0.4 * a << endl
		<< "0.5 = " << 0.5 * a << endl
		<< "0.6 = " << 0.6 * a << endl
		<< "0.7 = " << 0.7 * a << endl
		<< "0.8 = " << 0.8 * a << endl
		<< "0.9 = " << 0.9 * a << endl << "1 = " << a <<endl;




}
2
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double n,q=1,s=1.1;
	cin >> n;
	for (int z = 0; z < n; z++) {
		q = s * q;
		s += 0.1;
	}
	cout << q;
}
3
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double n,q=0;
	cin >> n;
	for (int z = 1; z <= 2*n -1; z+=2) {
		q += z;
		cout << q << endl;
	}
}
4
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double n,A,q=0;
	cin >> A >> n;
	for (int z = 0; z <= n; z+=1) {
		q = q + pow(A,z) ;
	}
	cout << q;
}
5
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double n,A,q=0;
	cin >> A >> n;
	for (int z = 0; z <= n; z+=1) {
		q = q + pow(-A,z) ;
		cout << q;
	}
	cout << q;
}
