#include <iostream>
#include <cmath>

using namespace std;

int main() {
	setlocale(LC_ALL, "");
	cout << "Введите 3 числа товара";
	int a, b, c;
	cin >> a >> b >> c;
	if (a > b && c > b){
		cout << "a + c = " << a + c;
}
	else if (b > a && c > a) {
		cout << "b + c = " << b + c;
	}

	else if (b > c && a > c) {
		cout << "b + a = " << b + a;
	}




}
3

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int  a , b , c;
    cin >> a >> b >> c;
    if ( abs(a - c) > abs (a-b)) {
        cout << "B = " << b << " AB == " << abs (a-b);
    }
    else if (abs(a - c) < abs(a - b)) {
        cout << "C = " << b << " AC == " << abs(a - c);
    }
    else {
        cout << "AC = AB = " << abs(a - c) ;
    }
    return 0;
}


4

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int  x, y;
    cin >> x >> y;
    if ( x > 0 && y > 0) {
        cout << "1";
    }
    if (x < 0 && y > 0) {
        cout << "2";
    }
    if (x < 0 && y < 0) {
        cout << "3";
    }
    if (x > 0 && y < 0) {
        cout << "4";
    }
    return 0;
}


5
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	int a;
	cin >> a;
	setlocale(LC_ALL, ""); 
	if (a > 0 && a % 2 == 0) {
		cout << "Положительное четное число";
	}
	if (a > 0 && a % 2 == 1) {
		cout << "Положительное нечетное число";
	}
	if (a < 0 && a % 2 == 0) {
		cout << "Отрицательное четное число";
	}
	if (a < 0 && a % 2 == 1) {
		cout << "Отрицательное нечетное число";
	}
	if (a == 0) {
		cout << "Нулевое число";
	}

}
6
#include <iostream>
#include <cmath>

using namespace std;

int main() {
	int a;
	cin >> a;
	setlocale(LC_ALL, ""); 
	if ( a / 10 == 0 && a % 2 == 0) {
		cout << " четное однозначное число";
	}
	if (a / 10 == 0 && a % 2 == 1) {
		cout << " не четное однозначное число";
	}
	if (a / 10 != 0 && a / 100 == 0 && a % 2 == 0) {
		cout << "четное двузначное число";
	}
	if (a / 10 != 0 &&  a / 100 == 0 && a % 2 == 1) {
		cout << "нечетное двузначное число";
	}
	if (a / 100 != 0 &&  a / 1000 == 0 && a % 2 == 0) {
		cout << "четное трезначное число";
	}
	if (a / 100 != 0 && a / 1000 == 0 && a % 2 == 1) {
		cout << "нечетное трезначное число";
	}

}
