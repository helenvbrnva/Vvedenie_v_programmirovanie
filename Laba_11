1

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
 int a , b ;
 cin >> a >> b ;
 if ( a > b) {
 b = a;
 cout << a << " "<< b;
    }
 else if (a < b) {
 a = b;
 cout << a << " " << b;
    }
 else {
 a = b = 0;
 cout << a << " " << b;
    }
 return 0;
}


